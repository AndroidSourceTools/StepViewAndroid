<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResAuto">

    <jugnoo.com.learningcustomvviews.StatusView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circleRadius="15dp"
        app:lineLength="25dp"
        app:circleStrokeWidth="5dp"
        app:lineWidth="4dp"
        app:circleColorType="fillStroke"
        app:lineColor="@android:color/holo_purple"
        app:circleColor="@android:color/holo_orange_dark"
        app:circleStrokeColor="@android:color/holo_purple"
        app:textColor="@android:color/white"
        app:textSize="14sp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>