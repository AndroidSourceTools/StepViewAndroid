<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResAuto">

    <jugnoo.com.learningcustomvviews.StatusView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circleRadius="20dp"
        app:lineLength="30dp"
        app:circleStrokeWidth="10dp"
        app:lineWidth="5dp"
        app:completeCount="2"
        app:drawCount="false"
        app:lineGap="3dp"
        app:statusCount="4"
        app:circleStrokeColorIncomplete="@android:color/black"
        app:circleColorInComplete="@android:color/darker_gray"
        app:lineColorIncomplete="@android:color/darker_gray"
        app:textColorIncomplete="@android:color/holo_red_dark"
        app:circleColorType="stroke"
        app:complete_drawable="@drawable/ic_done_black_24dp"
        app:lineColor="@android:color/black"
        app:circleColor="@android:color/holo_blue_light"
        app:circleStrokeColor="@android:color/black"
        app:textColor="@android:color/black"
        app:textSize="12sp"
        app:textSizeLabels="15sp"
        android:entries="@array/statuses"
        app:textColorLabels="@color/colorPrimary"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>